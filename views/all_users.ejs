<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/all_users.css">
    <title>Users</title>
</head>
<body>
    <%- include('header') %>
    <table>
        <thead>
            <tr>
                <th># ID</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td><%= user.first_name %></td>
                    <td><%= user.last_name %></td>
                    <td class="center"><a href="users/<%= user.id %>"><button class="view">View</button></a></td>
                    <td class="center"><a href="users/edit/<%= user.id %>"><button class="edit">Edit</button></a></td>
                    <td class="center">
                        <form action="/users/<%= user.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="delete">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>